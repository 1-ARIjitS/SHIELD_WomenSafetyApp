                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:drawableTint="@color/yellow"
                    android:drawablePadding="10dp"
                    android:textColor="#F1BE3E"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
