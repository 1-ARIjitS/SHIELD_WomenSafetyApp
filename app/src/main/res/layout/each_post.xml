<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E6E5E5"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/each_post_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
       android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F4F4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/each_post_username"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Username" />

            <TextView
                android:id="@+id/each_post_dnt"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal|italic"
                tools:text="date and time" />

        </LinearLayout>



            <TextView
                android:id="@+id/each_post_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:textColor="#151414"
                android:textSize="18sp"
                tools:text="caption" />

            <ImageView
                android:id="@+id/each_post_image"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/likes_image_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_like" />

                    <TextView
                        android:id="@+id/like_feature"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textColor="#131313"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/comment_feature"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_comment"
                        android:drawablePadding="5dp"
                        android:padding="2dp"

                        android:textAllCaps="true"
                        android:textColor="#131313"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/share_feature"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_share"
                        android:drawablePadding="5dp"
                        android:padding="2dp"
                        android:textAllCaps="true"
                        android:textColor="#131313"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>