<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity"
    android:background="@drawable/registration_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="REGISTRATION"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/bangers"/>

        <EditText
            android:id="@+id/registration_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <EditText
            android:id="@+id/registration_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <TextView
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Female"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="@drawable/text_fields"
            android:padding="10dp" />

        <EditText
            android:id="@+id/registration_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/registration_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_fields"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Mobile number"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#191818" />

        </LinearLayout>
        <Button
            android:id="@+id/pickCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Country"
            android:background="@drawable/text_fields"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/txtCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/pickStateButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pick State"
            android:background="@drawable/text_fields"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/txtState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/pickCity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pick City"
            android:background="@drawable/text_fields"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/txtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/registration_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:paddingStart="10dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <EditText
            android:id="@+id/registration_uvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="unique verification code"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <EditText
            android:id="@+id/registration_confirm_uvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="confirm unique verification code"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <EditText
            android:id="@+id/registration_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <EditText
            android:id="@+id/registration_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_fields"
            android:ems="10"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#191818" />

        <Button
            android:id="@+id/registration_verify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_view"
            android:text="create an account"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/registration_already_an_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_view"
            android:backgroundTint="#FF5722"
            android:text="Already have an Account ? login"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>