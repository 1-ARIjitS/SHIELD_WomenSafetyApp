<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"

        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/login_card_view"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="0dp"

            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="405dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#0B0A0A"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/login_image"
                        android:layout_width="78dp"
                        android:layout_height="89dp"
                        android:layout_gravity="center"

                        android:background="#E1B252"
                        app:srcCompat="@drawable/vig" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="212dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"

                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="Registration"
                    android:textColor="@color/textColor"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="50dp"
                    android:paddingLeft="3dp"
                    android:layout_marginBottom="20dp"
                    android:text="Please fill all the details to continue"
                    android:textColor="@color/subtextcolor"
                    />

                <EditText
                    android:id="@+id/registration_full_name"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textCursorDrawable="@drawable/shape_cursor" />

                <EditText
                    android:id="@+id/registration_age"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"

                    android:hint="Age"
                    android:paddingLeft="15dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/gender_spinner"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"
                    android:paddingRight="30dp"
                    android:text="Female"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/registration_email"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:hint="Email Id"
                    android:paddingLeft="15dp"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/registration_phone_number"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"

                    android:hint="Mobile Number"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:paddingLeft="15dp"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="phone"
                    />

                <!--
                <Button
                    android:id="@+id/registration_otp"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:background="@drawable/button_view"
