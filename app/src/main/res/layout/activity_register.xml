                    android:elevation="5dp"
                    android:hint="Address"
                    android:paddingLeft="15dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="textMultiLine"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    />

                <EditText
                    android:id="@+id/registration_uvc"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"

                    android:hint="Unique Verification Code"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:paddingLeft="15dp"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="textPassword"


                    />

                <EditText
                    android:id="@+id/registration_confirm_uvc"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"

                    android:hint="Confirm Unique Verification Code"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:paddingLeft="15dp"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="textPassword"

                    />

                <EditText
                    android:id="@+id/registration_pass"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"

                    android:hint="Password"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:paddingLeft="15dp"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="textPassword"

                    />

                <EditText
                    android:id="@+id/registration_confirm_pass"
                    android:layout_width="298dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_fields"
                    android:elevation="5dp"

                    android:hint="Confirm Password"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/subtextcolor"
                    android:paddingLeft="15dp"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:inputType="textPassword"
                    />

                <Button
                    android:id="@+id/registration_verify_button"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="15dp"
                    android:alpha="3.0"
                    android:paddingRight="30dp"
                    android:paddingLeft="10dp"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:background="@drawable/button_view"

                    android:text="Sign Up"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    />

                <LinearLayout
                    android:id="@+id/button"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="45dp"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="40dp"
                        android:paddingLeft="3dp"
                        android:layout_marginBottom="20dp"
                        android:text="Already have an account?"
                        android:textSize="15sp"
                        android:textColor="@color/subtextcolor"

                        />

                    <Button
                        android:id="@+id/registration_already_an_user"
                        android:layout_width="80dp"
                        android:layout_height="35dp"


                        android:paddingBottom="9dp"

                        android:backgroundTint="#FFFFFF"
                        android:text="Login"
                        android:textColor="#F1BE3E" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

