<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuperAdmin.Activities.RegisterSuperAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#0B0A0A"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="78dp"
                android:layout_height="89dp"
                android:layout_gravity="center"


                android:background="#E1B252"
                app:srcCompat="@drawable/vig" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/activity_usage"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Create a New Superadmin"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="20dp"
            android:paddingLeft="3dp"
            android:layout_marginBottom="20dp"
            android:text="Please fill all the details to continue"
            android:textColor="#6A000000"
            />

        <EditText
            android:id="@+id/create_superadmin_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/text_fields"
            android:elevation="5dp"

            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_cursor" />

        <EditText
            android:id="@+id/create_superadmin_email"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/text_fields"
            android:elevation="5dp"

            android:hint="Email-id"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_cursor" />

        <EditText
            android:id="@+id/create_superadmin_age"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/text_fields"
            android:elevation="5dp"
            android:hint="Age"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_cursor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="20dp"
            >


            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"

                android:background="@drawable/text_fields"
                android:text="Gender : "
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/create_superadmin_gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_view"
                android:textColor="@color/black"
                />


        </LinearLayout>
        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/actor"
            android:text="gender"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/create_superadmin_gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_view"
            android:textColor="@color/black"
            app:ms_arrow_tint="@color/colorAccent" />
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingRight="27dp"
            android:paddingLeft="25dp"
            android:paddingBottom="10dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/kin_ccp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_fields" />

            <EditText
                android:id="@+id/create_superadmin_mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/text_fields"
                android:elevation="5dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:padding="10dp"

                android:textColor="@color/black" />

        </LinearLayout>

        <EditText
            android:id="@+id/create_superadmin_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/text_fields"
            android:elevation="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"

            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingTop="1dp"
            android:paddingRight="27dp"
            android:paddingLeft="25dp"
            android:paddingBottom="1dp">

            <Button
                android:id="@+id/super_admin_country"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Country"
                android:background="@drawable/text_fields"
                android:drawableEnd="@drawable/ic_drop_down"

                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/super_admin_country_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingTop="1dp"
            android:paddingRight="27dp"
            android:paddingLeft="25dp"
            android:paddingBottom="1dp">

            <Button
                android:id="@+id/super_admin_sate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="State"
                android:background="@drawable/text_fields"
                android:drawableEnd="@drawable/ic_drop_down"

                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/super_admin_state_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingTop="1dp"
            android:paddingRight="27dp"
            android:paddingLeft="25dp"
            android:paddingBottom="1dp">

            <Button
                android:id="@+id/super_admin_city"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="City"
                android:background="@drawable/text_fields"
                android:drawableEnd="@drawable/ic_drop_down"

                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/super_admin_city_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>


        <EditText
            android:id="@+id/create_superadmin_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/text_fields"
            android:elevation="5dp"
            android:hint="Address"
            android:inputType="textPersonName"
            android:maxLines="10"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/create_superadmin_button"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:alpha="3.0"
            android:paddingRight="30dp"
            android:paddingLeft="10dp"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:background="@drawable/button_view"
            android:drawablePadding="10dp"
            android:text="Create"
            android:textSize="22sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>